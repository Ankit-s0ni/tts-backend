# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# --- JWT Authentication (for email-based auth) ---------------------------
JWT_SECRET_KEY=your-secret-jwt-key-here-min-32-chars

# --- Email Service (Resend) ----------------------------------------------
RESEND_API_KEY=your-resend-api-key-here

# --- File Storage (Cloudinary) -------------------------------------------
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# --- MongoDB Configuration -----------------------------------------------
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp
MONGODB_DB_NAME=tts_database

# --- Database (SQLite for user auth) -------------------------------------
DATABASE_URL=sqlite:///./dev.db

# --- Piper TTS -----------------------------------------------------------
PIPER_URL=http://piper-service:5000/
MODELS_DIR=/piper_models

# --- Voice Manager -------------------------------------------------------
MAX_CACHED_VOICES=5

# --- Redis (for Celery) --------------------------------------------------
REDIS_URL=redis://redis:6379/0

# --- Environment Settings ------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# --- OLD AWS Cognito (optional - for migration) --------------------------
# COGNITO_USER_POOL_ID=your-user-pool-id
# COGNITO_APP_CLIENT_ID=your-app-client-id
# AWS_REGION=ap-south-1

# --- DEPRECATED AWS Services (no longer needed) ---------------------------
